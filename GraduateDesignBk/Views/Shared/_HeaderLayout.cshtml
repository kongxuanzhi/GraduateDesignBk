    <script>
        $(function ($) {
            //alert("通知");
            $.ajax({
                url: "/Note/Display",
                data: null,
                type: "post",
                success: function (data) {
                    if (data != "error") {
                     //   alert(data)
                        $("#Note").html("通知:"+data);
                    }
