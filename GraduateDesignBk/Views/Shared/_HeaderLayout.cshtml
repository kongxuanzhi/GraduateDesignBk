    <div class="navbar navbar-inverse navbar-static-top" role="navigation" style="background-color: #2b303e;border-color: #2b303e;">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand navbar-brand-background" href="#"></a>
